extends base.pug

block title 
    title Register | #{siteName}

block content 
    .container
        .card 
            .card-body
                +header({title:"Register"})
                
                +text({lines: [
                    "Register to get your API Authorization token."
                ]})

                form.ms-5.mt-5(action="/register/", method="POST")
                    .form-floating.mb-3
                        input.form-control#emailInput(type="email" placeholder="name@example.com" name="email")
                        label(for="emailInput") Email Address
                    .form-floating.mb-3
                        input.form-control#passInput(type="password" placeholder="Password" name="password")
                        label(for="passInput") Password
                    .submit-group
                        input.btn.btn-primary(type="submit" value="Register")
                        a.btn.btn-primary.ms-1(href="{{url_for('login')}}") Login

                | {% if error %}

                .alert.alert-danger.ms-5.mt-2.text.mb-2(role="alert") {{error}}

                |{% endif %}

block scripts 
    script.
        
        const md = window.markdownit();

        const elements = document.getElementsByClassName('text');

        for(var i = 0; i < elements.length; i++){

            elements[i].innerHTML = md.render(elements[i].innerHTML)
        
        }
